      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/lb/instances?address={{addressA}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "lb",
            "instances"
          ],
          "query": [
            {
