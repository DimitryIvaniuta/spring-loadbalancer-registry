      "name": "Register instance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/lb/instances?address={{addressA}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "lb",
            "instances"
          ],
          "query": [
            {
              "key": "address",
              "value": "{{addressA}}"
            }
          ]
        }
      }
    },
    {
      "name": "Register instance (B)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/lb/instances?address={{addressB}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "lb",
            "instances"
          ],
          "query": [
            {
              "key": "address",
              "value": "{{addressB}}"
            }
          ]
        }
      }
    },
    {
      "name": "List instances",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/lb/instances",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "lb",
            "instances"
          ]
        }
      }
    },
    {
      "name": "Next instance",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/lb/instances/next",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "lb",
            "instances",
            "next"
          ]
        }
      }
    },
    {
